<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8B4B4"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="center"
        app:srcCompat="@drawable/logo_psb" />

    <Button
        android:id="@+id/buttonprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/ic_baseline_assignment_ind_24"
        android:drawableTint="@color/white"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="Profile"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonlearn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/blue2"
        android:drawableLeft="@drawable/ic_baseline_school_24"
        android:drawableTint="@color/white"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="E Learning"
        android:textAllCaps="false"
        android:textSize="25sp" />

</LinearLayout>